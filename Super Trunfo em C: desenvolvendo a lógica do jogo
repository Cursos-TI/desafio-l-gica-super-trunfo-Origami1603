#include <stdio.h>
#include <string.h>

int main() {
    // --- Primeira Carta ---
    int populacao1, pontos1, carta1;
    float area1, pib1, densidade1, pibPerCapita1, superPoder1;
    char estado1[3], codigo1[5], nome1[21];

    printf("Cadastro da Primeira Carta:\n");
    printf("Carta: ");
    scanf("%d", &carta1);
    printf("Estado: ");
    scanf("%s", &estado1);
    printf("C√≥digo da cidade: ");
    scanf("%s", &codigo1);
    printf("Nome da cidade: ");
    scanf("%s", &nome1);
    printf("Popula√ß√£o: ");
    scanf("%d", &populacao1);
    printf("√Årea (km¬≤): ");
    scanf("%f", &area1);
    printf("PIB (em bilh√µes): ");
    scanf("%f", &pib1);
    printf("N√∫mero de pontos tur√≠sticos: ");
    scanf("%d", &pontos1);

    densidade1 = populacao1 / area1;
    pibPerCapita1 = pib1 / populacao1;
    superPoder1 = populacao1 + area1 + pib1 + pontos1 + (1.0 / densidade1) + pibPerCapita1;

    // --- Segunda Carta ---
    int populacao2, pontos2, carta2;
    float area2, pib2, densidade2, pibPerCapita2, superPoder2;
    char estado2[3], codigo2[5], nome2[21];

    printf("\nCadastro da Segunda Carta:\n");
    printf("Carta: ");
    scanf("%d", &carta2);
    printf("Estado: ");
    scanf("%s", &estado2);
    printf("C√≥digo da cidade: ");
    scanf("%s", &codigo2);
    printf("Nome da cidade: ");
    scanf("%s", &nome2);
    printf("Popula√ß√£o: ");
    scanf("%d", &populacao2);
    printf("√Årea (km¬≤): ");
    scanf("%f", &area2);
    printf("PIB (em bilh√µes): ");
    scanf("%f", &pib2);
    printf("N√∫mero de pontos tur√≠sticos: ");
    scanf("%d", &pontos2);

    densidade2 = populacao2 / area2;
    pibPerCapita2 = pib2 / populacao2;
    superPoder2 = populacao2 + area2 + pib2 + pontos2 + (1.0 / densidade2) + pibPerCapita2;

    int atributo1, atributo2;

    printf("\n===== SUPER TRUNFO ‚Äî COMPARA√á√ÉO DUPLA =====\n");
    printf("Escolha o primeiro atributo:\n");
    printf("1 - Popula√ß√£o\n");
    printf("2 - √Årea\n");
    printf("3 - PIB\n");
    printf("4 - Pontos Tur√≠sticos\n");
    printf("5 - Densidade Demogr√°fica\n");
    printf("Digite o n√∫mero do primeiro atributo: ");
    scanf("%d", &atributo1);

    if (atributo1 < 1 || atributo1 > 5) {
        printf("Op√ß√£o inv√°lida. Encerrando o programa.\n");
        return 1;
    }

    printf("\nEscolha o segundo atributo (diferente do primeiro):\n");
    for (int i = 1; i <= 5; i++) {
        if (i != atributo1) {
            switch (i) {
                case 1: printf("1 - Popula√ß√£o\n"); break;
                case 2: printf("2 - √Årea\n"); break;
                case 3: printf("3 - PIB\n"); break;
                case 4: printf("4 - Pontos Tur√≠sticos\n"); break;
                case 5: printf("5 - Densidade Demogr√°fica\n"); break;
            }
        }
    }
    printf("Digite o n√∫mero do segundo atributo: ");
    scanf("%d", &atributo2);

    if (atributo2 < 1 || atributo2 > 5 || atributo2 == atributo1) {
        printf("Op√ß√£o inv√°lida. Encerrando o programa.\n");
        return 1;
    }

    // Obter valores dos atributos
    float val1_attr1, val2_attr1, val1_attr2, val2_attr2;
    char nomeAttr1[30], nomeAttr2[30];

    // Atributo 1
    switch (atributo1) {
        case 1: val1_attr1 = populacao1; val2_attr1 = populacao2; strcpy(nomeAttr1, "Popula√ß√£o"); break;
        case 2: val1_attr1 = area1; val2_attr1 = area2; strcpy(nomeAttr1, "√Årea"); break;
        case 3: val1_attr1 = pib1; val2_attr1 = pib2; strcpy(nomeAttr1, "PIB"); break;
        case 4: val1_attr1 = pontos1; val2_attr1 = pontos2; strcpy(nomeAttr1, "Pontos Tur√≠sticos"); break;
        case 5: val1_attr1 = densidade1; val2_attr1 = densidade2; strcpy(nomeAttr1, "Densidade Demogr√°fica"); break;
    }

    // Atributo 2
    switch (atributo2) {
        case 1: val1_attr2 = populacao1; val2_attr2 = populacao2; strcpy(nomeAttr2, "Popula√ß√£o"); break;
        case 2: val1_attr2 = area1; val2_attr2 = area2; strcpy(nomeAttr2, "√Årea"); break;
        case 3: val1_attr2 = pib1; val2_attr2 = pib2; strcpy(nomeAttr2, "PIB"); break;
        case 4: val1_attr2 = pontos1; val2_attr2 = pontos2; strcpy(nomeAttr2, "Pontos Tur√≠sticos"); break;
        case 5: val1_attr2 = densidade1; val2_attr2 = densidade2; strcpy(nomeAttr2, "Densidade Demogr√°fica"); break;
    }

    // Pontua√ß√£o com regras
    float score1 = 0, score2 = 0;
    score1 += (atributo1 == 5) ? (val1_attr1 < val2_attr1 ? 1 : val1_attr1 == val2_attr1 ? 0.5 : 0)
                                : (val1_attr1 > val2_attr1 ? 1 : val1_attr1 == val2_attr1 ? 0.5 : 0);
    score2 += (atributo1 == 5) ? (val2_attr1 < val1_attr1 ? 1 : val2_attr1 == val1_attr1 ? 0.5 : 0)
                                : (val2_attr1 > val1_attr1 ? 1 : val2_attr1 == val1_attr1 ? 0.5 : 0);

    score1 += (atributo2 == 5) ? (val1_attr2 < val2_attr2 ? 1 : val1_attr2 == val2_attr2 ? 0.5 : 0)
                                : (val1_attr2 > val2_attr2 ? 1 : val1_attr2 == val2_attr2 ? 0.5 : 0);
    score2 += (atributo2 == 5) ? (val2_attr2 < val1_attr2 ? 1 : val2_attr2 == val1_attr2 ? 0.5 : 0)
                                : (val2_attr2 > val1_attr2 ? 1 : val2_attr2 == val1_attr2 ? 0.5 : 0);

    // Exibi√ß√£o final
    printf("\n===== RESULTADO FINAL =====\n");
    printf("%s:\n  %s: %.2f\n  %s: %.2f\n", nome1, nomeAttr1, val1_attr1, nomeAttr2, val1_attr2);
    printf("%s:\n  %s: %.2f\n  %s: %.2f\n", nome2, nomeAttr1, val2_attr1, nomeAttr2, val2_attr2);
    printf("\nPontua√ß√£o:\n  %s: %.1f pontos\n  %s: %.1f pontos\n", nome1, score1, nome2, score2);

    (score1 > score2) ? printf("\nVencedor: %s üèÜ\n", nome1) :
    (score2 > score1) ? printf("\nVencedor: %s üèÜ\n", nome2) :
                          printf("\nResultado: Empate! ü§ù\n");

    return 0;
}
